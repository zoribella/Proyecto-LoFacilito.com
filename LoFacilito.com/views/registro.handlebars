{{>estilo-login}}
{{>header}}
<main>
    <div class="contenedor-form">
        <h2>Regístrate</h2>
        <form class="form" action="/registro">
            <div class="contenedor-inputs">
                <input class="input" type="text" name="nombre" placeholder="Nombre de usuario" required>
                <input class="input" type="email" name="mail" placeholder="E-mail" required>
                <input class="input" type="password" name="clave" placeholder="Crear clave" required>
                <input class="input-btn" type="submit" value="Regístrarme">
                <p id="link-ingresar">¿Ya tienes una cuenta?
                    <a id="ingresar" href="/login">Ingresa aqui</a>
                </p>
                <p id="link-ingresar"> ó regresa al
                    <a id="ingresar" href="/">Inicio</a>
                </p>
            </div>
        </form>
    </div>
</main>